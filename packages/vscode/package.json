{
  "name": "xon",
  "displayName": "XON",
  "description": "XON language support",
  "author": "nizami",
  "publisher": "nizami",
  "version": "1.13.0",
  "license": "MIT",
  "engines": {
    "vscode": "^1.87.0"
  },
  "bugs": {
    "url": "https://github.com/nizami/xon/issues"
  },
  "homepage": "hhttps://github.com/nizami/xon/tree/main/packages/vscode#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/nizami/xon.git"
  },
  "keywords": [
    "XON",
    "Programming Language"
  ],
  "icon": "xon.png",
  "categories": [
    "Programming Languages",
    "Snippets",
    "Linters",
    "Debuggers",
    "Formatters"
  ],
  "main": "./dist/vscode/src/main",
  "contributes": {
    "languages": [
      {
        "id": "xon",
        "aliases": [
          "XON"
        ],
        "extensions": [
          ".xon"
        ],
        "configuration": "./contributes/language-configuration.json",
        "icon": {
          "light": "xon.png",
          "dark": "xon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "xon",
        "scopeName": "source.xon",
        "path": "./contributes/xon.tmLanguage.json"
      }
    ],
    "semanticTokenScopes": [
      {
        "scopes": {
          "keyword_modifier": [
            "storage.type"
          ],
          "keyword_control": [
            "keyword.control"
          ],
          "keyword_operator": [
            "keyword.operator.expression"
          ]
        }
      }
    ],
    "commands": [
      {
        "command": "xon.translateToTypescript",
        "title": "Translate to TypeScript"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "xon.translateToTypescript",
          "when": "editorLangId == xon"
        }
      ],
      "explorer/context": [
        {
          "command": "xon.translateToTypescript",
          "when": "resourceLangId == xon"
        }
      ],
      "editor/context": [
        {
          "command": "xon.translateToTypescript",
          "when": "resourceLangId == xon"
        }
      ],
      "editor/title/context": [
        {
          "command": "xon.translateToTypescript",
          "when": "resourceLangId == xon"
        }
      ]
    },
    "configuration": {
      "title": "XON",
      "properties": {
        "xon": {
          "type": "object",
          "properties": {
            "translateOnSave": {
              "type": "boolean",
              "default": false,
              "description": "Create translated ts file with near original one"
            },
            "newFileNameCase": {
              "type": "",
              "enum": [
                "camel",
                "capital",
                "constant",
                "dot",
                "kebab",
                "pascal",
                "pascal_snake",
                "path",
                "sentence",
                "snake",
                "train"
              ],
              "default": "kebab",
              "description": "Create new file with specified case when refactoring"
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:build": "rm -rf dist && esbuild ./src/main.ts --bundle --outfile=dist/vscode/src/main.js --external:vscode --format=cjs --platform=node",
    "vscode:prepublish": "npm run -S vscode:build -- --minify",
    "vscode:install": "vsce pack -o dist/xon.vsix && code --install-extension dist/xon.vsix"
  }
}
