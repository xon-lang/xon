{
  "name": "xon",
  "author": "nizami",
  "type": "module",
  "devDependencies": {
    "@types/node": "22.13.4",
    "@types/vscode": "1.97.0",
    "typescript": "5.7.3",
    "vite": "6.1.1",
    "vitest": "3.0.6"
  },
  "scripts": {
    "test": "vitest run",
    "dev": "tsc --noEmit --watch",
    "vscode:build": "rm -rf 'packages/vscode/dist' && esbuild 'packages/vscode/src/main.ts' --bundle --outfile='packages/vscode/dist/vscode/src/main.js' --external:vscode --format=cjs --platform=node",
    "barrels": "tsc -p scripts/tsconfig.json && node scripts/dist/barrels.script.js"
  }
}
