{
  "name": "xon",
  "author": "nizami",
  "type": "module",
  "devDependencies": {
    "@types/node": "22.13.14",
    "@types/vscode": "1.98.0",
    "typescript": "5.8.2",
    "vite": "6.2.3",
    "vitest": "3.0.9"
  },
  "scripts": {
    "test": "vitest run",
    "dev": "tsc --noEmit --watch",
    "vscode:build": "rm -rf 'packages/vscode/dist' && esbuild 'packages/vscode/src/main.ts' --bundle --outfile='packages/vscode/dist/main.js' --external:vscode \"--external:*.gen.ts\" --format=cjs --platform=node",
    "barrels": "tsc -p scripts/tsconfig.json && node scripts/dist/barrels.script.js"
  }
}
