{
  // antlr4
  "antlr4.format": {
    "alignActions": true,
    "alignColons": "hanging",
    "alignFirstTokens": true,
    "alignLabels": true,
    "alignLexerCommands": true,
    "alignSemicolons": "hanging",
    "alignTrailers": true,
    "alignTrailingComments": true,
    "allowShortBlocksOnASingleLine": true,
    "allowShortRulesOnASingleLine": true,
    "breakBeforeBraces": false,
    "breakBeforeParens": false,
    "columnLimit": 150,
    "continuationIndentWidth": 2,
    "groupedAlignments": true,
    "indentWidth": 2,
    "keepEmptyLinesAtTheStartOfBlocks": true,
    "maxEmptyLinesToKeep": 1,
    "minEmptyLines": 0,
    "reflowComments": true,
    "ruleInternalsOnSingleLine": false,
    "singleLineOverrulesHangingColon": true,
    "spaceBeforeAssignmentOperators": true,
    "tabWidth": 2,
    "useTab": false
  },
  "antlr4.generation": {
    "mode": "none"
  },
  "[xon]": {
    "editor.defaultFormatter": "nizami.xon"
  },
  "cSpell.words": [
    "antrl",
    "barrelsby",
    "bfnrtv",
    "camelcase",
    "codacy",
    "contravariance",
    "esbuild",
    "gulpfile",
    "linebreak",
    "nodir",
    "nonblock-statement-body-position",
    "outfile",
    "PAREN",
    "pinst",
    "plusplus",
    "postpublish",
    "postversion",
    "proto",
    "semantify",
    "seti",
    "ts-nocheck",
    "vsix"
  ],
  "editor.codeActionsOnSave": {
    "source.organizeImports": "always"
  },
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.tsdk": "node_modules/typescript/lib"
}
